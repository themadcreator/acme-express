{
  "name": "acme-express",
  "version": "0.2.0",
  "description": "ACME protocol client for SSL certificates",
  "bin": {
    "acme-express": "bin/acme-express"
  },
  "main": "src/api.coffee",
  "scripts": {
    "run"           : "./bin/acme-express",
    "version-patch" : "npm version patch -m \"Update version to %s\" ",
    "version-minor" : "npm version minor -m \"Update version to %s\" ",
    "ship"          : "git push && git push --tags && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/themadcreator/acme-express.git"
  },
  "keywords": [
    "acme",
    "letsencrypt",
    "https",
    "ssl",
    "certificate"
  ],
  "author": "themadcreator@github",
  "license": "Apache-2.0",
  "dependencies": {
    "asn1.js": "4.2.1",
    "bluebird": "3.1.1",
    "chalk": "1.1.1",
    "coffee-script": "1.10.0",
    "commander": "2.9.0"
  }
}
